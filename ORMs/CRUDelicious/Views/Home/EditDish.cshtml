@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

@using CRUDelicious.Models;
@model Dish

<a class="mt-5 d-inline-block" href="/">Home</a>
<h1 class="text-center mb-5">Edit @Model.Name</h1>
<form asp-action="updateDish" asp-controller="Home" method="post">
    <div class="col-10 mx-auto p-5 text-center">
        <div class="d-inline-block col-3">
            <label class="d-block" asp-for="Chef"></label>
            <input class="d-block" asp-for="Chef" />
            <label class="d-block" asp-for="Name"></label>
            <input class="d-block" asp-for="Name" />
            <label class="d-block" asp-for="Calories"></label>
            <input class="d-block" asp-for="Calories" />
        </div>
        <div class="d-inline-block align-top col-3">
            <label class="d-block" asp-for="Tastiness"></label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="d-inline-block align-top col-3">
            <label class="d-block" asp-for="Description"></label>
            <textarea class="d-block col-12" asp-for="Description" rows="4"></textarea>
            <input class="btn btn-primary my-3" type="submit" />
        </div>
    </div>
</form>